# Environment Configuration
# Copy this file to .env and update the values according to your environment

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=tutoring_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here
JWT_EXPIRE=24h

# Session Configuration
SESSION_SECRET=your_session_secret_key_here

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@tutoringplatform.com

# Firebase Configuration (for push notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your_project_id.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk%40your_project_id.iam.gserviceaccount.com

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,mp4,avi,mov,mp3,wav

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SLOW_DOWN_DELAY_AFTER=50
SLOW_DOWN_DELAY_MS=500

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILES=10
LOG_MAX_SIZE=5242880

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# WebRTC Configuration (for video calls)
WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
WEBRTC_TURN_SERVERS=
WEBRTC_TURN_USERNAME=
WEBRTC_TURN_CREDENTIAL=

# Third-party Service Configuration
TURNITIN_API_KEY=your_turnitin_api_key
TURNITIN_API_URL=https://api.turnitin.com

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# Feature Flags
ENABLE_VIDEO_CALLS=true
ENABLE_FILE_UPLOADS=true
ENABLE_PAYMENTS=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# Cache Configuration
CACHE_TTL=3600
SESSION_CACHE_TTL=86400
USER_CACHE_TTL=3600

# Monitoring and Health Checks
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics

# External API Timeouts
EXTERNAL_API_TIMEOUT=30000
PAYMENT_API_TIMEOUT=45000

# Development/Debug Configuration
DEBUG=tutoring:*
VERBOSE_LOGGING=false
API_DOCS_ENABLED=true

# Production-specific Configuration
TRUST_PROXY=true
SECURE_COOKIES=true
FORCE_HTTPS=false

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Notification Settings
PUSH_NOTIFICATION_ENABLED=true
EMAIL_NOTIFICATION_ENABLED=true
SMS_NOTIFICATION_ENABLED=false

# Default Settings
DEFAULT_TIMEZONE=UTC
DEFAULT_LANGUAGE=en
DEFAULT_CURRENCY=USD
DEFAULT_PAGE_SIZE=20
DEFAULT_SESSION_DURATION=60

# Platform Settings
PLATFORM_NAME="Tutoring Platform"
PLATFORM_VERSION="1.0.0"
SUPPORT_EMAIL=support@tutoringplatform.com
PRIVACY_POLICY_URL=https://tutoringplatform.com/privacy
TERMS_OF_SERVICE_URL=https://tutoringplatform.com/terms

# Commission and Revenue Settings
PLATFORM_COMMISSION_RATE=0.15
MINIMUM_PAYOUT_AMOUNT=10.00
PAYOUT_SCHEDULE=weekly

# Content Moderation
AUTO_MODERATION_ENABLED=true
CONTENT_FILTER_THRESHOLD=0.8
MODERATION_QUEUE_ENABLED=true

# Performance Optimization
DATABASE_POOL_SIZE=20
DATABASE_IDLE_TIMEOUT=30000
CONNECTION_TIMEOUT=2000

# Real-time Features
WEBSOCKET_HEARTBEAT_INTERVAL=25000
WEBSOCKET_HEARTBEAT_TIMEOUT=60000
MAX_CONCURRENT_CONNECTIONS=1000

# File Processing
IMAGE_PROCESSING_ENABLED=true
VIDEO_PROCESSING_ENABLED=true
PDF_PROCESSING_ENABLED=true
ANTIVIRUS_SCANNING_ENABLED=false

# Analytics and Tracking
TRACK_USER_ACTIONS=true
TRACK_PERFORMANCE_METRICS=true
TRACK_ERRORS=true
SESSION_TRACKING_ENABLED=true