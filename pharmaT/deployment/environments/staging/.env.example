# Staging Environment Configuration

# Application
NODE_ENV=staging
PORT=3000

# Database Configuration
DB_HOST=staging-db.tutoring-platform.com
DB_PORT=5432
DB_NAME=tutoring_staging
DB_USER=tutoring_user
DB_PASSWORD=${STAGING_DB_PASSWORD}
DB_SSL=true

# Redis Configuration
REDIS_HOST=staging-redis.tutoring-platform.com
REDIS_PORT=6379
REDIS_PASSWORD=${STAGING_REDIS_PASSWORD}

# Authentication
JWT_SECRET=${STAGING_JWT_SECRET}
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Firebase Configuration
FIREBASE_PROJECT_ID=tutoring-platform-staging
FIREBASE_PRIVATE_KEY=${FIREBASE_PRIVATE_KEY}
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-staging@your-project.iam.gserviceaccount.com

# Stripe Configuration (Test Keys)
STRIPE_PUBLIC_KEY=pk_test_your_test_public_key
STRIPE_SECRET_KEY=sk_test_your_test_secret_key
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@tutoring-staging.com
SMTP_PASS=${STAGING_EMAIL_PASSWORD}
SMTP_FROM=noreply@tutoring-staging.com

# Storage Configuration
STORAGE_TYPE=aws_s3
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=us-east-1
S3_BUCKET=tutoring-platform-staging-uploads
CLOUDFRONT_DOMAIN=d1234567890abcdef.cloudfront.net

# API Configuration
API_RATE_LIMIT=500
API_RATE_WINDOW=900000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ELASTICSEARCH_URL=https://staging-elasticsearch.tutoring-platform.com:9200

# Security Configuration
CORS_ORIGIN=https://staging.tutoring-platform.com,https://staging-app.tutoring-platform.com
SESSION_SECRET=${STAGING_SESSION_SECRET}
ENCRYPTION_KEY=${STAGING_ENCRYPTION_KEY}

# WebRTC Configuration
TURN_SERVER_URL=turn:staging-turn.tutoring-platform.com:3478
TURN_USERNAME=${TURN_USERNAME}
TURN_PASSWORD=${TURN_PASSWORD}

# External Services
PLAGIARISM_API_URL=https://staging-api.turnitin.com
VIDEO_SDK_API_KEY=${STAGING_VIDEO_SDK_API_KEY}

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_URL=http://staging-prometheus.tutoring-platform.com:9090
GRAFANA_URL=http://staging-grafana.tutoring-platform.com:3000

# Feature Flags
FEATURE_ANALYTICS=true
FEATURE_VIDEO_RECORDING=true
FEATURE_GROUP_SESSIONS=true
FEATURE_AI_GRADING=true

# Health Checks
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=tutoring-platform-staging-backups

# Load Balancer Configuration
LOAD_BALANCER_URL=https://staging-api.tutoring-platform.com
HEALTH_CHECK_PATH=/health

# Domain Configuration
DOMAIN=staging.tutoring-platform.com
SSL_CERT_PATH=/etc/ssl/certs/staging.tutoring-platform.com.crt
SSL_KEY_PATH=/etc/ssl/private/staging.tutoring-platform.com.key

# Environment Information
ENVIRONMENT_NAME=staging
DEPLOYMENT_TIMESTAMP=${DEPLOYMENT_TIMESTAMP}
BUILD_NUMBER=${BUILD_NUMBER}