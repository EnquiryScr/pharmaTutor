# Development Environment Configuration

# Application
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tutoring_dev
DB_USER=tutoring_user
DB_PASSWORD=dev_password
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_password

# Authentication
JWT_SECRET=dev_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Firebase Configuration
FIREBASE_PROJECT_ID=tutoring-platform-dev
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# Stripe Configuration (Test Keys)
STRIPE_PUBLIC_KEY=pk_test_your_test_public_key
STRIPE_SECRET_KEY=sk_test_your_test_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@tutoring-dev.com

# Storage Configuration
STORAGE_TYPE=local
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# API Configuration
API_RATE_LIMIT=1000
API_RATE_WINDOW=900000

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Security Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
SESSION_SECRET=dev_session_secret
ENCRYPTION_KEY=dev_encryption_key_32_chars

# WebRTC Configuration
TURN_SERVER_URL=turn:localhost:3478
TURN_USERNAME=user
TURN_PASSWORD=pass

# External Services
PLAagiarism_API_URL=http://localhost:5001
VIDEO_SDK_API_KEY=your_dev_video_sdk_key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
FEATURE_ANALYTICS=true
FEATURE_VIDEO_RECORDING=true
FEATURE_GROUP_SESSIONS=true
FEATURE_AI_GRADING=false

# Development Tools
DEBUG=tutoring:*
HOT_RELOAD=true
SOURCE_MAPS=true